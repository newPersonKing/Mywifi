<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_linear"
    android:layout_width="240dp"
    android:layout_height="20dp"
    android:background="@color/top_back_color">

    <TextView
        android:id="@+id/top_yys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="2dp"
        android:text=""
        android:textColor="@color/top_yxs_color"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/top_sim_type"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/top_yys"
        android:text=""
        android:textColor="@color/top_yxs_color"
        android:textSize="12sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:id="@+id/top_wifi_hot"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:src="@drawable/top_rd"
        android:layout_toLeftOf="@+id/top_wifi"/>

    <ImageView
        android:id="@+id/top_wifi"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:src="@drawable/top_wifi1"
        android:layout_toLeftOf="@+id/top_sim_wifi"/>

    <ImageView
        android:id="@+id/top_sim_wifi"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/top_dc1"
        android:src="@drawable/top_xh4"/>

    <FrameLayout
        android:id="@+id/top_dc1"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_toLeftOf="@+id/top_time"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/top_dc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/top_dc1"/>

        <ImageView
            android:id="@+id/top_dc_cd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/top_dc_cd"
            android:visibility="gone"/>
    </FrameLayout>


    <TextView
        android:id="@+id/top_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:text="12:30"
        android:textColor="@color/top_yxs_color"/>

</RelativeLayout>
