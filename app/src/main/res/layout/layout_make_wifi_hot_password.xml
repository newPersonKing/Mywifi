<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/back_color_one">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_wifi_password"
            android:layout_width="234dp"
            android:layout_height="55dp"
            android:background="@color/top_yxs_color"
            android:textSize="20sp"
            android:textColor="@color/edit_text_color"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="@dimen/dp_10"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/jsq_qr_a_click"
            android:layout_marginRight="@dimen/dp_5"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="234dp"
        android:layout_height="207dp"
        android:background="@color/miwen_text_color">
        <android.inputmethodservice.KeyboardView
            android:id="@+id/activity_main_keyboard"
            android:layout_width="242dp"
            android:layout_height="212dp"
            android:keyPreviewLayout="@null"
            android:clickable="true"
            android:keyBackground="@color/miwen_text_color"
            android:background="@color/miwen_text_color"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/img_alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/small_text_color"
            android:alpha="0.5"
            android:visibility="gone"/>

        <include layout="@layout/layout_over_lay"
            android:id="@+id/ll_over" />

    </FrameLayout>



</LinearLayout>
